# YouTube API配置
YOUTUBE_API_KEY=your_youtube_api_key_here

# Telegram Bot配置
BOT_TOKEN=your_telegram_bot_token_here
CHAT_ID=your_telegram_chat_id_here

# Alist配置
ALIST_SERVER=https://your-alist-server.com
ALIST_USERNAME=your_alist_username
ALIST_PASSWORD=your_alist_password

# 监控的YouTube播放列表ID（多个用逗号分隔）
PLAYLISTS=playlist_id_1,playlist_id_2,playlist_id_3

# 可选配置（有默认值）
CHECK_INTERVAL=1800                    # 检查间隔(秒)，默认30分钟
MAX_CONCURRENT_DOWNLOADS=3             # 最大并发下载数
DOWNLOAD_PATH=/app/downloads          # 下载目录
ALIST_PATH=/videos                    # Alist上传路径
VIDEO_QUALITY=best                     # 视频质量: best(最高质量,包括4K/8K), 4k, 1080p, 720p, 480p
DATABASE_PATH=/app/data/app.db        # 数据库文件路径
LOG_LEVEL=INFO                        # 日志级别
LOG_FILE=/app/logs/app.log            # 日志文件路径

# Google Drive配置（可选）
ENABLE_GDRIVE_DOWNLOAD=true            # 启用Google Drive下载功能
GDRIVE_DOWNLOAD_PATH=/app/downloads/gdrive  # Google Drive文件下载路径
MAX_GDRIVE_FILE_SIZE=1073741824        # Google Drive最大文件大小限制（字节），默认1GB
MAX_GDRIVE_CONCURRENT=2                # Google Drive最大并发下载数
GDRIVE_UPLOAD_TO_ALIST=true            # 将下载的Google Drive文件上传到Alist

# Instagram配置（可选）
ENABLE_INSTAGRAM=false                  # 启用Instagram收藏视频下载功能
INSTAGRAM_USERNAME=your_username        # Instagram用户名
INSTAGRAM_PASSWORD=your_password        # Instagram密码  
INSTAGRAM_SESSION_FILE=/app/data/instagram_session.json  # Instagram会话文件路径
INSTAGRAM_DOWNLOAD_PATH=/app/downloads/instagram         # Instagram下载目录
INSTAGRAM_CHECK_INTERVAL=3600           # Instagram收藏检查间隔(秒)，默认1小时
MAX_INSTAGRAM_CONCURRENT=2              # Instagram最大并发下载数
INSTAGRAM_UPLOAD_TO_ALIST=true          # 将下载的Instagram视频上传到Alist
INSTAGRAM_QUALITY=best                  # Instagram视频质量: best, 720p, 480p

# Instagram高级配置（可选）
INSTAGRAM_MAX_RETRIES=5                 # Instagram API最大重试次数
INSTAGRAM_RETRY_DELAY=60                # Instagram重试延迟基数(秒)
INSTAGRAM_USE_PROXY=false               # Instagram是否使用代理
INSTAGRAM_PROXY_HOST=                   # Instagram代理服务器地址
INSTAGRAM_PROXY_PORT=0                  # Instagram代理服务器端口
INSTAGRAM_CUSTOM_USER_AGENT=            # Instagram自定义用户代理字符串（留空使用默认）

# 播放列表下载策略配置（可选）
# 格式: playlist_id1:strategy1,playlist_id2:strategy2
# 策略选项:
#   both - 下载视频和Google Drive文件（默认）
#   video_only - 仅下载视频，忽略Google Drive文件
#   gdrive_only - 仅下载Google Drive文件，跳过视频
# 示例: PLAYLIST_STRATEGIES=PLxxx123:video_only,PLyyy456:gdrive_only
PLAYLIST_STRATEGIES=